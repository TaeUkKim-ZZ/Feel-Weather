<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.feel.weather" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cloud"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.feel.weather.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.feel.weather.AddFriendsActivity"
            android:label="@string/title_activity_add_friends"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.feel.weather.MyProFileActivity"
            android:label="@string/title_activity_my_pro_file"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.feel.weather.FriendsActivity"
            android:label="@string/title_activity_friends"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.feel.weather.AddUserActivity"
            android:label="@string/title_activity_add_user"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
